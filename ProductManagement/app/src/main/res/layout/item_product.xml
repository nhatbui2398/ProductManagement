<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/txt_prdID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSpace1"
            android:layout_marginEnd="@dimen/marginEndSpace"
            android:paddingRight="@dimen/view_padding"
            android:paddingLeft="@dimen/view_padding"
            android:gravity="center"
            android:text="@string/order_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize2" />

        <TextView
            android:id="@+id/txt_prdName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginEndSpace"
            android:layout_weight="1"
            android:gravity="center"
            android:ellipsize="end"
            android:text="@string/name_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize2" />

        <ImageView
            android:id="@+id/btn_sub"
            android:layout_width="@dimen/btnSizeType1"
            android:layout_height="@dimen/btnSizeType1"
            android:src="@drawable/minus" />

        <EditText
            android:layout_weight="0.2"
            android:id="@+id/edt_prdAmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginEndSpace"
            android:layout_marginRight="@dimen/marginEndSpace"
            android:gravity="center"
            android:hint="@string/default_number"
            android:inputType="number"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize2" />

        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="@dimen/btnSizeType1"
            android:layout_height="@dimen/btnSizeType1"
            android:layout_marginEnd="5dp"
            android:src="@drawable/plus" />
    </LinearLayout>


    </android.support.v7.widget.CardView>