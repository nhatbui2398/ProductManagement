<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_padding">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSpace1"
            android:layout_marginTop="@dimen/marginEndSpace"
            android:layout_marginEnd="@dimen/marginSpace2"
            android:gravity="center"
            android:hint="@string/order_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize2" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginEndSpace"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/name_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize2" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/btnSizeType1"
            android:layout_height="@dimen/btnSizeType1"
            android:layout_marginStart="@dimen/marginButtonSpace"
            android:src="@drawable/icon_view_more_ngang" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/btnSizeType1"
            android:layout_height="@dimen/btnSizeType1"
            android:layout_marginLeft="@dimen/marginButtonSpace"
            android:layout_marginRight="@dimen/marginButtonSpace"
            android:src="@drawable/icon_search_btn_cleardata" />

    </LinearLayout>
</android.support.v7.widget.CardView>