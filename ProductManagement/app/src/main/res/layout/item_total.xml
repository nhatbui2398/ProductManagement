<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_padding">

        <TextView
            android:id="@+id/txt_prd_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/order_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize" />

        <TextView
            android:id="@+id/txt_prd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginSpace1"
            android:gravity="center"
            android:hint="@string/name_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize" />

        <TextView
            android:id="@+id/txt_prd_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginSpace1"
            android:gravity="center"
            android:hint="@string/point_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize" />

        <TextView
            android:id="@+id/txt_prd_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginEndSpace"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/price_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize" />

        <TextView
            android:id="@+id/txt_prd_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/amount_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/primaryTextSize" />

    </LinearLayout>

</android.support.v7.widget.CardView>