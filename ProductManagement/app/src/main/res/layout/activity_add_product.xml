<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_product"
            android:textSize="@dimen/primaryTextSize3"
            android:textColor="@color/white"
            android:background="@color/primaryDarkColor"
            android:padding="@dimen/view_padding"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/btnSizeType2"
            android:layout_height="@dimen/btnSizeType2"
            android:src="@drawable/btn_header_back"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/marginEndSpace"
        android:padding="@dimen/view_padding"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />
            <TextView
                android:id="@+id/txt_product_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/default_number"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_title"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />

            <EditText
                android:id="@+id/edt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/point_title"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />
            <EditText
                android:id="@+id/edt_product_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/default_number"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_title"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />
            <EditText
                android:id="@+id/edt_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/default_number"
                android:inputType="numberDecimal"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount_1"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />
            <EditText
                android:id="@+id/edt_price_dis_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/default_number"
                android:inputType="numberDecimal"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount_2"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />
            <EditText
                android:id="@+id/edt_price_dis_35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/default_number"
                android:inputType="numberDecimal"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount_3"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />

            <EditText
                android:id="@+id/edt_price_dis_42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/default_number"
                android:inputType="numberDecimal"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount_4"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                android:layout_marginEnd="@dimen/marginEndSpace"
                />
            <EditText
                android:id="@+id/edt_price_dis_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/default_number"
                android:inputType="numberDecimal"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/primaryTextSize2"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:id="@+id/control"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingSize5"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCancel"
            android:textColor="@color/white"
            android:background="@drawable/main_button_shape"
            android:textStyle="bold"
            android:textSize="@dimen/secondaryTextSize"
            android:layout_marginEnd="@dimen/marginButtonSpace"
            />
        <Button
            android:id="@+id/btn_add"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAdd"
            android:textColor="@color/white"
            android:background="@drawable/main_button_shape"
            android:textStyle="bold"
            android:textSize="@dimen/secondaryTextSize"
            />
    </LinearLayout>
</LinearLayout>